<Window x:Class="ContractMonthlyClaimSystem.ReviewClaimsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Review Claims" Height="400" Width="600">
    <Grid>
        <DataGrid x:Name="dataGridClaims" AutoGenerateColumns="True" Margin="10"/>
        <Button Content="Approve" Click="Approve_Click" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Left"/>
        <Button Content="Reject" Click="Reject_Click" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
