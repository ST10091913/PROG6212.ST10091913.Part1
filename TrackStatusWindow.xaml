<Window x:Class="ContractMonthlyClaimSystem.TrackStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Track Status" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Track Status Window" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Track Status -->
            <Grid>
                <TextBox x:Name="txtClaimID" Margin="5" Text="{Binding Path=ClaimID, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Enter Claim ID" Foreground="Gray" VerticalAlignment="Center" Margin="10,0,0,0" IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Track" Click="Track_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
